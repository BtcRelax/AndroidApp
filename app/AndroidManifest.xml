<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.nico.asura"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/gen_name"
        android:theme="@style/AppTheme" >

        <!-- Main Application Activity -->
        <activity
            android:name=".Main"
            android:label="@string/gen_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- WebViewFirst Activity -->
        <activity
            android:name=".activities.WebViewFirst"
            android:label="@string/menu_Web_1_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>

        <!-- PassWebViewFirst Activity -->
        <activity
            android:name=".activities.PassWebViewFirst"
            android:label="@string/menu_AuthWeb_1_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>

        <!-- Preferences Activity -->
        <activity
            android:name=".activities.Preferences"
            android:label="@string/title_prefs" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>
    </application>

</manifest>